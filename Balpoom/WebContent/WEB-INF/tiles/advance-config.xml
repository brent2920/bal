<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC 
	"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<!-- expression el테그로 value설정시 사용 -->
	<definition name="t_el" template="/view/template.jsp">
		<put-attribute name="title" expression="${title}" />
		<put-attribute name="header" value="/view/review/header.jsp" />
		<put-attribute name="main" expression="/view/${main}.jsp" />
		<put-attribute name="footer" value="/view/review/footer.jsp" />
	</definition>

	<!-- template에도 expression가능 -->

	<definition name="t_ttl" template="/view/${template}.jsp">
		<put-attribute name="title" expression="${title}" />
		<put-attribute name="header" value="/view/review/header.jsp" />
		<put-attribute name="main" expression="/view/${main}.jsp" />
		<put-attribute name="footer" value="/view/review/footer.jsp" />
	</definition>
	<!-- wildcard로 벨류 설정 가능 -->
	<definition name="tw_*/*" template="/view/template.jsp">
		<put-attribute name="title" expression="wildcard" />
		<put-attribute name="header" value="/view/review/header2.jsp" />
		<put-attribute name="main" expression="/view/{1}/{2}.jsp" />
		<put-attribute name="footer" value="/view/review/footer.jsp" />
	</definition>
	
	<definition name="log_*/*/*" template="/view/template.jsp">
		<put-attribute name="title" expression="wildcard" />
		<put-attribute name="header" value="/view/review/{1}.jsp" />
		<put-attribute name="main" expression="/view/{2}/{3}.jsp" />
		<put-attribute name="footer" value="/view/review/footer.jsp" />
	</definition>
	
	
</tiles-definitions>
	